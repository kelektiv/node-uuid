{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "plugins": ["node", "standard", "prettier"],
  "extends": [
    "eslint:recommended",
    "standard",
    "prettier",
    "prettier/standard",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "msCrypto": true
  },
  "parser": "babel-eslint",
  "rules": {
    "array-bracket-spacing": ["warn", "never"],
    "arrow-body-style": ["warn", "as-needed"],
    "arrow-spacing": "warn",
    "brace-style": ["warn", "1tbs"],
    "camelcase": "warn",
    "comma-spacing": [
      "warn",
      {
        "after": true
      }
    ],
    "dot-notation": "warn",
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1,
        "FunctionDeclaration": {
          "parameters": 1
        },
        "MemberExpression": 1,
        "CallExpression": {
          "arguments": 1
        }
      }
    ],
    "key-spacing": [
      "warn",
      {
        "beforeColon": false,
        "afterColon": true,
        "mode": "minimum"
      }
    ],
    "keyword-spacing": "warn",
    "no-multi-spaces": "warn",
    "no-trailing-spaces": "warn",
    "no-undef": "error",
    "no-unused-vars": [
      "warn",
      {
        "args": "none"
      }
    ],
    "one-var": ["warn", "never"],
    "no-var": "error",
    "padded-blocks": ["warn", "never"],
    "semi": ["warn", "always"]
  }
}
